<Application x:Class="SharpMacroPlayer.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:SharpMacroPlayer"
			 xmlns:uc="clr-namespace:SharpMacroPlayer.UserControls"
			 StartupUri="MainWindow.xaml">
	<Application.Resources>
        <Style TargetType="local:MainWindow">
        </Style>
        
        <Style TargetType="uc:KeyboardButton">
        </Style>
        <Style TargetType="uc:MouseKeyButton">
            
        </Style>
        <Style TargetType="Button">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="DarkGray"/>
        </Style>
        <Style TargetType="Button" x:Key="ButtonIcon">
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="DarkGray"/>
        </Style>
        <Style TargetType="Button" x:Key="ButtonTransparent">

        </Style>
    </Application.Resources>
</Application>
