<Page x:Class="KeyLogger.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyLogger.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="280" d:DesignWidth="840"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
            <ComboBox Name="ProfileSelector" ItemsSource="{Binding BindingsFiles}" Margin="16"/>
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Label Content="Название профиля:" />
                <TextBox Grid.Row="1" Name="ProfileName" Text="{Binding CurrentBindingFile}"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
