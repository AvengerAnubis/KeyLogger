<Page x:Class="KeyLogger.Pages.MacroElementEditorPages.LoopElementEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeyLogger.Pages.MacroElementEditorPages"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="640"
      Title="LoopElementEditor">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="16" CanVerticallyScroll="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Margin="4"  Content="Кол-во повторений"/>
                <TextBox x:Name="textBox" Margin="4" Grid.Column="1" Text="{Binding Condition}"/>
            </Grid>
        </StackPanel>
        <Button Grid.Row="1" Content="OK" Margin="16" Width="64" HorizontalAlignment="Right" Click="Button_Click"/>
    </Grid>
</Page>
